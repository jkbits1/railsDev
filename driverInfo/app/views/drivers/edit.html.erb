<h1>Edit driver</h1>

<%= form_for (@driver) do |f| %>
  <% if @driver.errors.any?  %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@driver.errors.count, "error") %>
        stopped this driver from being saved:
      </h2>
      <ul>
        <% @driver.errors.full_messages.each do |msg| %>
          <li>
            <%= msg %>
          </li>
        <% end %> %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>

<%= link_to 'Driver List', drivers_path %>